<h1>Eat-A-Burger!</h1>

<div id="left">
<h2> Menu </h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="burger_name" value="true">
          <button type="submit">DEVOUR IT!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id="right">
<h2>You already ate these!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{burger_name}}


      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div id="bottom">
<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="newBurger">Type of Burger:</label>
    <input type="text" id="newBurger" name="inputName">
  </div>


  <button type="submit">Add Burger</button>
</form>
</div>
